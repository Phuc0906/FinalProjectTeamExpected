<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane fx:id="scrPane" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sample.ArticleController">
    <content>
        <AnchorPane fx:id="coverPane" maxHeight="720.0" prefHeight="720.0" style="-fx-background-color: white;">
            <VBox layoutX="10.0" layoutY="4.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="0.0">
                <children>
                    <Button fx:id="logo" mnemonicParsing="false" prefHeight="98.0" style="-fx-background-color: white;"
                            text="Vietcetera.">
                        <font>
                            <Font name="Javanese Text" size="30.0"/>
                        </font>
                    </Button>
                    <HBox fx:id="buttonBox" prefHeight="37.0" prefWidth="630.0"
                          style="-fx-background-color: white; -fx-border-color: green;">
                        <Button fx:id="New" mnemonicParsing="false" onAction="#toNewPage"
                                style="-fx-background-color: white;" text="New">
                            <font>
                                <Font name="System Bold" size="12.0"/>
                            </font>
                        </Button>
                        <Button fx:id="covid" mnemonicParsing="false" onAction="#toCovidPage"
                                style="-fx-background-color: white;" text="Covid">
                            <font>
                                <Font name="System Bold" size="12.0"/>
                            </font>
                        </Button>
                        <Button fx:id="politics" mnemonicParsing="false" onAction="#toPoliticsPage"
                                style="-fx-background-color: white;" text="Politics">
                            <font>
                                <Font name="System Bold" size="12.0"/>
                            </font>
                        </Button>
                        <Button fx:id="business" mnemonicParsing="false" onAction="#toBusinessPage"
                                style="-fx-background-color: white;" text="Business">
                            <font>
                                <Font name="System Bold" size="12.0"/>
                            </font>
                        </Button>
                        <Button fx:id="tech" mnemonicParsing="false" onAction="#toTechPage"
                                style="-fx-background-color: white;" text="Tech">
                            <font>
                                <Font name="System Bold" size="12.0"/>
                            </font>
                        </Button>
                        <Button fx:id="health" mnemonicParsing="false" onAction="#toHealthPage"
                                style="-fx-background-color: white;" text="Health">
                            <font>
                                <Font name="System Bold" size="12.0"/>
                            </font>
                        </Button>
                        <Button fx:id="sports" mnemonicParsing="false" onAction="#toSportsPage"
                                style="-fx-background-color: white;" text="Sports">
                            <font>
                                <Font name="System Bold" size="12.0"/>
                            </font>
                        </Button>
                        <Button fx:id="entertainment" mnemonicParsing="false" onAction="#toEntertainmentPage"
                                style="-fx-background-color: white;" text="Entertainment">
                            <font>
                                <Font name="System Bold" size="12.0"/>
                            </font>
                        </Button>
                        <Button fx:id="world" mnemonicParsing="false" onAction="#toWorldPage"
                                style="-fx-background-color: white;" text="World">
                            <font>
                                <Font name="System Bold" size="12.0"/>
                            </font>
                        </Button>
                        <Button fx:id="others" mnemonicParsing="false" onAction="#toOthersPage" prefHeight="25.0"
                                prefWidth="57.0" style="-fx-background-color: white;" text="Others">
                            <font>
                                <Font name="System Bold" size="12.0"/>
                            </font>
                        </Button>
                    </HBox>
                    <VBox fx:id="articleBox" prefWidth="100.0">
                        <VBox.margin>
                            <Insets top="40.0"/>
                        </VBox.margin>
                    </VBox>
                </children>
            </VBox>
        </AnchorPane>
    </content>
</ScrollPane>
